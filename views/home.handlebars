{{>partials/navbar}}

<h6 class="h3 mt-3 mb-3"> {{>partials/title}} </h6>

<div class="row w-75 m-auto">
  <!-- Crear -->
  <div class="col-12 col-sm-3 contaienr p-3">
    <h6>Crear un archivo</h6>
    <form action="http://localhost:3000/crear">
      <div class="form-group">
        Nombre del archivo
        <input name="archivo" class="form-control" id="archivo" />
      </div>
      <div class="form-group">
        Contenido
        <textarea name="contenido" class="form-control" id="contenido" cols="30" rows="10"></textarea>
      </div>

      <button type="submit" class="btn btn-primary">Crear archivo</button>
    </form>
  </div>
  <!-- Leer -->
  <div class="col-12 col-sm-3 contaienr p-3">
    <h5>Leer un archivo</h5>
    <form action="http://localhost:3000/leer">
      <div class="form-group">
        Nombre del archivo
        <input name="archivo" class="form-control" id="archivo" />
      </div>

      <button type="submit" class="btn btn-info">Consultar archivo</button>
    </form>
  </div>
  <!-- Renombrar -->
  <div class="col-12 col-sm-3 contaienr p-3">
    <h5>Renombrar un archivo</h5>
    <form action="http://localhost:3000/renombrar">
      <div class="form-group">
        Nombre del archivo actual
        <input name="nombreActual" class="form-control" id="archivo" />
      </div>
      <div class="form-group">
        Nuevo nombre del archivo
        <input name="nuevoNombre" class="form-control" id="archivo" />
      </div>

      <button type="submit" class="btn btn-warning">Renombrar archivo</button>
    </form>
  </div>
  <!-- Eliminar -->
  <div class="col-12 col-sm-3 contaienr p-3">
    <h5>Eliminar un archivo</h5>
    <form action="http://localhost:3000/eliminar">
      <div class="form-group">
        Nombre del archivo
        <input name="archivo" class="form-control" id="archivo" />
      </div>

      <button type="submit" class="btn btn-danger">Eliminar archivo</button>
    </form>
  </div>
</div>